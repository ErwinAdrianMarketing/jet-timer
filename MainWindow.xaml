<Window x:Class="JetTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jet Timer"
        Height="140"
        Width="260"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Left="100"
        Top="100">
    <Border x:Name="MainContainer"
            Background="#A6000000"
            BorderBrush="#888888"
            BorderThickness="2"
            CornerRadius="10"
            Padding="10,12"
            Visibility="Collapsed"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Timer 1 -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="Timer1Display"
                          Text="87"
                          FontSize="48"
                          FontWeight="Bold"
                          Foreground="#555555"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"/>
                <TextBlock Text="Jet #1"
                          FontSize="11"
                          Foreground="#AAAAAA"
                          HorizontalAlignment="Center"
                          Opacity="0.8"
                          Margin="0,3,0,0"/>
            </StackPanel>

            <!-- Timer 2 -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="Timer2Display"
                          Text="87"
                          FontSize="48"
                          FontWeight="Bold"
                          Foreground="#555555"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"/>
                <TextBlock Text="Jet #2"
                          FontSize="11"
                          Foreground="#AAAAAA"
                          HorizontalAlignment="Center"
                          Opacity="0.8"
                          Margin="0,3,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
